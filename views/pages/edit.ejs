<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/">View Jobs</a></li>
      <li class="breadcrumb-item active" aria-current="page">Edit Job</li>
    </ol>
  </nav>
<div class="container" style="padding-top: 20vh;"> 
    <div class="row">
      <div class="col-sm-4 col-md-4">
      </div>
      <div class="col-sm-4 col-md-4">
        <form method="POST" action="/Jobs/putJob/<%= jobs.jobName %>">
            <h1 style="text-align: center;">Edit Job</h1>
            <div class="form-group">
              <label for="JobName">Job Name</label>
                <input readonly type="text" value="<%= jobs.jobName %>" class="form-control" name="jobName" id="jobName" 
                    placeholder="Job Name">
            </div>
            <div class="form-group">
              <label for="partID">Part ID</label>
              <input readonly type="number" class="form-control" value="<%= jobs.partID %>" id="partID" name="partID" placeholder="Part ID">
            </div>
            <div class="form-group">
                <label for="qty">Quantity</label>
                <input required type="number" value="<%= jobs.qty %>" class="form-control" id="qty" name="qty" placeholder="Quantity">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="col-sm-4 col-md-4">
      </div>
    </div>
  </div>
